    "@semantic-release/npm": "7.0.6",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@types/jest": "26.0.14",
    "@types/jest-when": "2.7.1",
    "@types/node": "14.11.2",
    "jest": "26.4.2",
    "jest-when": "2.7.2",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "semantic-release": "17.1.2",
    "ts-jest": "26.4.1",
    "ts-loader": "8.0.4",
    "ts-node": "9.0.0",
    "tslint": "6.1.3",
    "tslint-config-airbnb": "5.11.2",
